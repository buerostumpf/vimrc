filetype on
syntax on
colorscheme pixelmuerto
set guifont=Menlo\ Regular:h14
"set lines=35 columns=150
"set colorcolumn=90
set number

"aenderungen sofort anzeigen
map <leader>s :source ~/.vimrc<CR>

set hidden
set history=100

"einzuege
filetype indent on
set nowrap
